@{
    ViewBag.Title = "Cash out";
}

<h2>Cash out</h2>
<div>
    <p>You have @ViewBag.Betcoins Betcoins.</p>
    @using (Html.BeginForm(actionName: "CashOut", controllerName: "Profile"))
    {
        @Html.HttpMethodOverride(HttpVerbs.Put)

        @Html.Label("amount", "How many Betcoins do you want to cash out?")
        <br />
        <input type="number" name="amount" class="form-control" />
        <br />
        <br />

        <button class="btn btn-primary" type="submit">Cash out</button>
    }
</div>


