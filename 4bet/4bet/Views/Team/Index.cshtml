@model _4bet.Models.Team
@{
    ViewBag.Title = "Teams";
}

<div class="container">
    <h3>
        Teams
        @if (@ViewBag.isAdmin == true)
        {
            <a class="btn btn-primary float-right" href="/Team/New"><i class='fas fa-plus'></i></a>
        }
    </h3>
    <br/>
    <div class="card-columns" style="text-align: center;">
        @foreach (var team in ViewBag.Teams)
        {
            <a href="/Team/Show/@team.TeamId" style="color: black; text-decoration:none">
                <div class="card" style="width:300px; height:480px">
                    <img class="card-img-top" src="~/Assets/@team.PhotoFileName" alt="Image unavailable" style="width:297px; height:350px; overflow: hidden; padding: 5px">
                    <div class="card-body">
                        <br/>
                        <h3 class="card-title">@team.TeamName</h3>
                    </div>
                </div>
            </a>
        }
    </div>
</div>

